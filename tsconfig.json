{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "skipLibCheck": true,
    "paths": {
      "explorviz-frontend/tests/*": [
        "tests/*"
      ],
      "explorviz-frontend/*": [
        "app/*",
        "lib/heatmap/app/*"
      ],
      "*": [
        "types/*"
      ],
      "heatmap": [
        "lib/heatmap/addon"
      ],
      "heatmap/*": [
        "lib/heatmap/addon/*"
      ],
      "heatmap/test-support": [
        "lib/heatmap/addon-test-support"
      ],
      "heatmap/test-support/*": [
        "lib/heatmap/addon-test-support/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
    "lib/heatmap"
  ]
}
