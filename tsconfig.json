{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "skipLibCheck": true,
    "paths": {
      "explorviz-frontend/tests/*": [
        "tests/*"
      ],
      "explorviz-frontend/*": [
        "app/*",
        "lib/virtual-reality/app/*"
      ],
      "*": [
        "types/*"
      ],
      "virtual-reality": [
        "lib/virtual-reality/addon"
      ],
      "virtual-reality/*": [
        "lib/virtual-reality/addon/*"
      ],
      "virtual-reality/test-support": [
        "lib/virtual-reality/addon-test-support"
      ],
      "virtual-reality/test-support/*": [
        "lib/virtual-reality/addon-test-support/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
    "lib/virtual-reality/**/*",
  ],
  "exclude": [
    "lib/virtual-reality/addon/utils/lib/**/*"
  ]
}
