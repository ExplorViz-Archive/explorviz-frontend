{{#if session.isAuthenticated}}
  <nav class="navbar navbar-default">
    <div class="container-fluid">
     <!-- Brand and toggle get grouped for better mobile display -->
     <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" style="width: 150px;" target="_blank"
        href="http://www.explorviz.net">
          <img style="width: 100%;" src="images/explorviz-transparent.png"/>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    {{page-setup/navbar-routes resetRoute="resetRoute"}}
      <ul class="nav navbar-nav navbar-right">
        <li>
          {{#link-to "configuration" title="Show Configuration"}}
              <span id="configurationButton" class="glyphicon glyphicon-cog"></span>
          {{/link-to}}
        </li>
        <li>
            <p class="navbar-text"> Signed in as <b>{{username}}</b></p>
        </li>
        <li>
          <a {{action 'logout'}} style="cursor:pointer;" title="Logout">
            <span id="logoutButton" class="glyphicon glyphicon-log-out"></span>
          </a>
        </li>
     </ul>
     {{page-setup/navbar-glyphicons}}
   </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
  </nav>
{{/if}}

<div id="vizContainer" style="height: 80%; width: 100%; overflow:hidden;">
  {{outlet}}
</div>

