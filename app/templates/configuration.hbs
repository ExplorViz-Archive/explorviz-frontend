{{#bs-tab id="configuration-tab"customTabs=true as |tab|}}
  <nav>
    {{#bs-nav type="tabs" as |nav|}}
      {{#nav.item class="nav-link" onClick=(action tab.select "generalPane") active=(bs-eq tab.activeId "generalPane")}}General{{/nav.item}}
      {{#nav.item class="nav-link" onClick=(action tab.select "userManagementPane") active=(bs-eq tab.activeId "userManagementPane")}}User Management{{/nav.item}}
    {{/bs-nav}}
  </nav>

  <div class="tab-content">
    {{#tab.pane elementId="generalPane" title="General"}}
      {{#if (eq tab.activeId "generalPane")}}
        TODO: see issue https://github.com/ExplorViz/explorviz-frontend/issues/80
      {{/if}}
    {{/tab.pane}}
    {{#tab.pane elementId="userManagementPane" title="User Management"}}
      {{#if (eq tab.activeId "userManagementPane")}}
        {{user-management}}
      {{/if}}
    {{/tab.pane}}

    <!-- Tab pane for each addon that is registered at configurationService -->
    {{#each configurationService.pluginSettings as |addon|}}
      {{#tab.pane title=addon}}
        {{component addon}}
      {{/tab.pane}}
    {{/each}}
  </div>
{{/bs-tab}}