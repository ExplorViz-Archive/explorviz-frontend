{{#bs-tab id="configuration-tab" customTabs=true as |tab|}}
  <nav>
    {{#bs-nav type="tabs" as |nav|}}
      {{#nav.item onClick=(action tab.select "userSettingsPane") active=(bs-eq tab.activeId "userSettingsPane")}}{{#nav.link-to "configuration.settings"}}Settings{{/nav.link-to}}{{/nav.item}}

      {{#if this.model.isAdmin}}
        {{#nav.item onClick=(action tab.select "userManagementPane") active=(bs-eq tab.activeId "userManagementPane")}}{{#nav.link-to "configuration.usermanagement"}}User Management{{/nav.link-to}}{{/nav.item}}
      {{/if}}
    {{/bs-nav}}
  </nav>
  <div class="tab-content mt-5">
    {{outlet}}
{{!-- <!-- Tab pane for each addon that is registered at configurationService -->
    {{#each configurationService.pluginSettings as |addon|}}
      {{#tab.pane title=addon}}
        {{component addon}}
      {{/tab.pane}}
    {{/each}} --}}
  </div>
{{/bs-tab}}