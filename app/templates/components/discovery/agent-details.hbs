{{#if showSpinner}}
  <div class="explorVizModal">
    {{ember-spinner lines=11 length=16 radius=30 width=8 rotate=10 speed='1.1' color="#ffffff"}}
  </div>
{{/if}}


<div class="btn-group justify-content-center" role="group">
  <button {{action "saveAgent"}} type="button" class="btn btn-secondary">Save</button>
</div>

{{#bs-tab id="discovery-details-tab" class="mt-3" as |tab|}}
  {{#tab.pane title=(name-selector agent.ip agent.name)}}
    {{#ember-scrollable}}
      {{discovery/agent-details-tables/general-information agent=agent}}
    {{/ember-scrollable}}
  {{/tab.pane}}
{{/bs-tab}}

