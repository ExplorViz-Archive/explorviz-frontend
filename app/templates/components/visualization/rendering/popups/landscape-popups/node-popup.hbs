<div class="popover">
    <h3 class="popover-header">
        <div style="font-weight:bold;text-align:center;">{{data.nodeName}}</div>
    </h3>
    <div class="popover-body" style="white-space: nowrap;">

        <table style="width:100%">
            <tr>
                <td>CPU Utilization:</td>
                <td style="text-align:right;padding-left:10px;"> {{data.cpuUtil}}
                </td>
            </tr>
            <tr>
                <td>Free RAM:</td>
                <td style="text-align:right;padding-left:10px;"> {{data.freeRAM}} GB
                </td>
            </tr>
            <tr>
                <td>Total RAM:</td>
                <td style="text-align:right;padding-left:10px;"> {{data.totalRAM}} GB
                </td>
            </tr>
        </table>
    </div>
</div>