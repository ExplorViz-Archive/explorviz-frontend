
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Trace ID</th>
      <th scope="col">Soure Clazz</th> 
      <th scope="col">Target Clazz</th>
      <th scope="col">Duration(ns)</th>
    </tr>
  </thead>
  <tbody>
    {{#each traces as |trace|}}
      {{#if trace.isSelected}}
        <tr {{action "traceSelected" trace.traceId}} style="cursor: pointer" bgcolor="#cc8a8a">
          <th scope="row">{{trace.traceId}}</th>
          <td title={{trace.sourceClazz.name}}>{{string-shortener trace.sourceClazz.name 11}}</td>
          <td title={{trace.targetClazz.name}}>{{string-shortener trace.targetClazz.name 13}}</td>
          <td>{{trace.totalTraceDuration}}</td>
        </tr>
      {{else}}
        <tr {{action "traceSelected" trace.traceId}} style="cursor: pointer">
          <th scope="row">{{trace.traceId}}</th>
          <td title={{trace.sourceClazz.name}}>{{string-shortener trace.sourceClazz.name 11}}</td>
          <td title={{trace.targetClazz.name}}>{{string-shortener trace.targetClazz.name 13}}</td>
          <td>{{trace.totalTraceDuration}}</td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>