<div align="right">
  <label {{action "close"}} title="Close SQL Overview" aria-label="Close">
    <font size="5">&times;</font>
  </label>
  <h5 align="center">SQL Statements</h5>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Time</th>
      <th scope="col">Statement</th>
      <th scope="col">Statement Type</th>
      <th scope="col">Return Value</th>
    </tr>
  </thead>
  <tbody>
    {{#each landscapeRepo.latestApplication.databaseQueries as |query|}}
    <tr style="cursor: pointer">
      <th scope="row">{{query.timestamp}}</th>
      <td title={{query.sqlStatement}}>{{query.sqlStatement}}</td>
      <td title={{query.statementType}}>{{string-shortener query.statementType 9}}</td>
      <td title={{query.returnValue}}>{{query.returnValue}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>