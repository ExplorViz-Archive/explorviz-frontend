<div>
  <h3>User Settings</h3>
  <hr>
  <div class="mt-2">
    {{user-management/user-settings-base settings=this.user.settings}}

    {{#if this.showSpinner}}
      {{#bs-button type="primary" buttonType="submit" disabled=true}}
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        Saving...
      {{/bs-button}}
    {{else}}
      {{bs-button defaultText="Save Changes" onClick=(action "saveSettings") type="primary" buttonType="submit"}}
    {{/if}}
  </div>
</div>