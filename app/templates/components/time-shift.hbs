<div id='timeline' class='timeline' vis='hide'>
  <canvas id='timelinePlot' ></canvas>
</div>

<!-- toggle hiding timeline -->
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-offset-5 col-sm-2 text-center">
      <a {{action 'toggleTimeline'}}>
        <span id="toggleTimelineButton" class="glyphicon {{chevronCSSClass}}"></span>
      </a>
      <a {{action 'playPauseTimeshift'}}>
        <span id="playPauseTimelineButton" class="glyphicon {{playPauseCSSClass}}"></span>
      </a>
    </div>
  </div>
</div>