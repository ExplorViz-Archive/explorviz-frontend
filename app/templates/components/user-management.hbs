<div class="row">
  <div class="col-4">
    <h4 class="mt-3">Create Single User</h4>
    <form {{action 'saveUser' on='submit'}}>
      <div class="form-group">
        <label for="inputUsername">Username</label>
        {{input value=username placeholder='Enter Username' class="form-control" id="inputUsername" autofocus="true"}}
      </div>
      <div class="form-group">
        <label for="inputPassword">Password</label>
        {{input value=password placeholder='Password' class="form-control" id="inputPassword" type="password"}}
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <h4 class="mt-3">Create Multiple Users</h4>
    <form {{action 'saveMultipleUsers' on='submit'}}>
      <div class="form-group">
        <label for="inputUsernamePrefix">Username Prefix</label>
        {{input value=usernameprefix placeholder='Enter Prefix' class="form-control" id="inputUsernamePrefix" autofocus="true"}}
      </div>
      <div class="form-group">
        <label for="inputNumberOfUsers">Number of Users</label>
        {{input value=numberofusers placeholder='# of users' class="form-control" id="inputNumberOfUsers" type="number" min="1"}}
      </div>
      <div class="form-group">
        {{#each roles as |role index|}}
          <div class="form-check form-check-inline">
            <label class="form-check-label">
              {{input checked=(get roleChecked index) class="form-check-input" id=(concat "input_role_" index) type="checkbox"}}{{role}}
            </label>
          </div>
        {{/each}}
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>