{{#if this.procezzForDetailView}}
  <Discovery::ProcezzDetails
    @errorHandling={{this.errorHandling}}
    @procezz={{this.procezzForDetailView}}
  />
{{else if this.agentForDetailView}}
  <Discovery::AgentDetails
    @errorHandling={{this.errorHandling}}
    @agent={{this.agentForDetailView}}
    @toggleAgentVisibility={{this.toggleAgentVisibility}}
  />
{{else}}
  <Discovery::NodeOverview
    @showDetails={{this.showDetailsComponent}}
  />
{{/if}}