<div class="mb-1">
  <div class="float-right">
    <input
      id="selectBoxUploadLandscape"
      type="file"
      style="display:none;"
      {{on "change" this.uploadLandscape}}
    >
    <BsButton
      @type="success"
      @outline={{true}}
      onClick={{this.triggerSelectBox}}
      @title="Upload a landscape"
    >
      {{svg-jar "cloud-upload"}}
      <span>Upload landscape</span>
    </BsButton>
  </div>
</div>
<div class="row" style="max-height:100%">
  <div class="col-12" id="vizspace" {{did-resize this.resize debounce=100}}>
    {{#if this.showLandscape}}
      {{#if this.landscapeRepo.replayLandscape.systems}}
        <Visualization::PageSetup::VisualizationNavbar
          @content={{array
            (component "visualization/page-setup/navbar/reset-visualization")
            (component "visualization/page-setup/navbar/landscape-downloader" landscape=this.landscapeRepo.replayLandscape)
          }}
        />
        <div id="rendering">
          <Visualization::Rendering::LandscapeRendering
            @landscape={{this.landscapeRepo.replayLandscape}}
          />
          {{!-- popup(s) --}}
          <Visualization::Rendering::Popups::PopupCoordinator
            @popupData={{this.additionalData.popupContent}}
          />
        </div>
      {{else}}
        <div class="container-fluid">
          <div class="jumbotron">
            <h2>No replay landscape selected!</h2>
            <p>
              Please select a landscape from the timeline.
              If the timeline is empty, please <i>upload</i> a landscape first.
            </p>
          </div>
          <div class="spinner-center-3" role="status"></div>
        </div>
      {{/if}}
    {{else}}
      <Visualization::PageSetup::VisualizationNavbar
        @content={{array
          (component "visualization/page-setup/navbar/reset-visualization")
          (component "visualization/page-setup/navbar/landscape-downloader" landscape=this.landscapeRepo.replayLandscape)
          (component "visualization/page-setup/navbar/application-opener")
          (component "visualization/page-setup/navbar/application-search")
        }}
      />
      <div id="rendering">
        <div style="position: absolute!important" class="pl-1">
          <BsButton
            @onClick={{this.openLandscapeView}}
            @type="secondary"
            @outline={{true}}
            @title="Back to Landscape"
          >
            {{svg-jar "reply" class="octicon align-middle"}}
          </BsButton>
        </div>
        <Visualization::Rendering::ApplicationRendering
          @mode="replay"
          @latestApplication={{this.landscapeRepo.replayApplication}}
        />
        {{!-- popup(s) --}}
        <Visualization::Rendering::Popups::PopupCoordinator
          @popupData={{this.additionalData.popupContent}}
        />
      </div>
    {{/if}}
    {{!-- timeline --}}
    <div id="timeline-content">
      <BsButton
        class="btn-timeline"
        @onClick={{this.toggleTimeline}}
        @type="secondary"
        @outline={{true}}
        @title={{if this.renderingService.showTimeline "Hide Timeline" "Show Timeline"}}
      >
        {{#unless this.renderingService.showTimeline}}
          <span class="pr-1">Show Timeline</span>
        {{/unless}}
        {{svg-jar
          "chevron-up"
          id="hidetimeline-icon"
          class=(if this.renderingService.showTimeline "octicon align-middle hidetimeline-icon-down" "octicon align-middle")
        }}
      </BsButton>
      <div
        id="timeline"
        class="timeline {{unless this.renderingService.showTimeline "timelinehide"}}"
      >
        <Replay::PageSetup::Timeline::PlotlyTimeline
          @timestamps={{this.timestampRepo.replayTimelineTimestamps}}
          @clicked={{this.timelineClicked}}
        />
      </div>
    </div>
  </div>
</div>