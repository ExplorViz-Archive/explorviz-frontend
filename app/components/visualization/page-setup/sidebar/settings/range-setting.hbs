<div class="mb-3">
  <HelpTooltip @title={{@setting.description}} />
  <label for={{@setting.name}}>{{@setting.displayName}}</label>
  <div class="d-flex align-items-center">
    <input
      id={{@setting.name}}
      value={{@setting.value}}
      min={{@setting.range.min}}
      max={{@setting.range.max}}
      type="number"
      step="0.1"
      class="form-control mr-2"
      {{on "change" @onChange}}
    >
    <Visualization::PageSetup::Sidebar::Settings::ResetButton @onClick={{@onChange}} />
  </div>
</div>