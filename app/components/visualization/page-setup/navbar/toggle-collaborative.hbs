<li class="nav-item">
  {{#if @collaborativeModeActive}}
    <div
      class="nav-link-with-cursor"
      title="Resume Collaborative Mode"
      {{on "click" @toggleCollaborativeMode}}
    >
      {{svg-jar "keyboard" class="octicon align-middle navbar-highlight"}}
    </div>
  {{else}}
    <div
      class="nav-link-with-cursor"
      title="Pause Collaborative Mode"
      {{on "click" @toggleCollaborativeMode}}
    >
      {{svg-jar "keyboard" class="octicon align-middle"}}
    </div>
  {{/if}}
</li>