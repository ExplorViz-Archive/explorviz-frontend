<div id="exp-navbar-adv">
  <span class="d-flex-center">
    {{svg-jar "person" class="octicon"}}
    <span>
      <b>{{this.auth.user.nickname}}</b>
    </span>
  </span>
  <LinkTo @route="configuration" class="d-flex-center" @title="Configuration">
    {{svg-jar "gear" class="octicon"}}<span>Configuration</span>
  </LinkTo>
  <div
    class="d-flex-center"
    style="cursor: pointer"
    title="Logout"
    {{on "click" this.logout}}
  >
    {{svg-jar "sign-out" class="octicon"}}<span>Logout</span>
  </div>
</div>