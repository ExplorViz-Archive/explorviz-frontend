{{#if this.showHiddenMessage}}
  <div class="container-fluid">
    <div class="spinner-center-3" role="status"></div>
    <div class="jumbotron">
      <h2>All agents are hidden!</h2>
      <button type="button" {{on "click" this.enableShowHidden}}>Show hidden entities</button>
    </div>
  </div>
{{else}}
  {{#if this.agentRepo.agentList}}
    <div id="cy" class="cytoscape-container" {{did-insert this.renderGraph}}></div>
  {{else}}
    <div class="container-fluid">
      <div class="jumbotron">
        <h2>No agents found!</h2>
        <p>
          To enable the discovery mode, follow
          <a href="https://github.com/explorviz/explorviz-discovery-agent">
            the setup steps as shown in the related Github README file.
          </a>
        </p>        
        <p>
          No agent registered with the backend at the moment. A new list will be fetched every 10 seconds.
        </p>
      </div>
      <div class="spinner-center-3-relative" role="status">
      </div>
    </div>
  {{/if}}
{{/if}}