<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-xs-2">Attribute</th>
      <th class="col-xs-10">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <b>Internal ID</b>
        <HelpTooltip @title="Entity ID used by ExplorViz" />
      </td>
      <td>{{@agent.id}}</td>
    </tr>
    <tr>
      <td>
        <b>Agent IP:Port</b>
        <HelpTooltip
          @title="Shows the IP and Port of the agent. Read the Name Info for more information."
        />
      </td>
      <td>{{@agent.ip}}:{{@agent.port}}</td>
    </tr>
    <tr>
      <td>
        <b>Last Time registered</b>
        <HelpTooltip @title="Shows the last time the agent (re-)registered." />
      </td>
      <td>{{this.lastDiscoveryTimeAsDate}}</td>
    </tr>
    <tr>
      <td>
        <b>Name</b>
        <HelpTooltip 
          @title="Name attribute has a higher priority than IP:Port in all views. This attribute will also be considered for monitoring. If not filled, a monitored node will be named after the IP:Port attribute. While a procezz of this agent is monitored, changes to this attribute have no effect. Restart of process is necessary."
        />
      </td>
      <td>
        <Input class="form-control" @value={{@agent.name}} />
      </td>
    </tr>
    <tr>
      <td>
        <b>Hide Agent?</b>
        <HelpTooltip
          @title="Hide this agent. It will not be visible on the overview page. Enable 'Show hidden entities' in settings dialog to undo."
        />
      </td>
      <td>
        <div style="float: left;">
          <XToggle
            @theme="skewed"
            @onLabel="Yes"
            @offLabel="No"
            @value={{@agent.isHidden}}
            @onToggle={{@toggleAgentVisibility}}
          />
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <b>Number of processes</b>
        <HelpTooltip
          @title="Shows the number of processes for this agent. Might be a hint for hidden processes."
        />
      </td>
      <td>
        <div class="well well-sm container-word-wrap" style="margin-bottom: 0px;">
          {{@agent.procezzes.length}}
        </div>
      </td>
    </tr>
    {{#if @agent.errorOccured}}
      <tr>
        <td>
          <b><p style="color:red">Error message</p></b>
          <HelpTooltip
            @title="An error occured. The message might be a hint on what's wrong."
          />
        </td>
        <td>
          <div class="well well-sm container-word-wrap" style="margin-bottom: 0px;">
            <p style="color:red">{{@agent.errorMessage}}</p>
          </div>
        </td>
      </tr>
    {{/if}}
  </tbody>
</table>