{{! regarding formLayout:
https://github.com/kaliber5/ember-bootstrap/issues/441}}

<BsModal
  @open={{this.showDeleteUsersDialog}}
  @onSubmit={{perform this.deleteUsers}}
  @onHide={{this.hideUserDeletionDialogue}} as |modal|
>
  <modal.header>
    <h4 class="modal-title">Please confirm</h4>
  </modal.header>
  <modal.body>Are you sure you want to delete the selected users?</modal.body>
  <modal.footer>
    <BsButton
      @onClick={{modal.close}}
      @type="danger"
    >
      Cancel
    </BsButton>
    <BsButton
      @onClick={{modal.submit}}
      @type="success"
      @disabled={{this.deleteUsers.isRunning}}
    >
      {{#if this.deleteUsers.isRunning}}
        Deleting
        <span
          class="spinner-border spinner-border-sm"
          role="status"
          aria-hidden="true"
        >
        </span>
      {{else}}
        Confirm
      {{/if}}
    </BsButton>
  </modal.footer>
</BsModal>

<div class="col-12 d-flex flex-column">
  <h3>Users</h3>
  <div class="mb-3">
    <div class="d-flex justify-content-between">
      <div class="d-flex">
        {{!-- Delete Multiple Users Button --}}
        {{#if this.showDeleteUsersButton}}
          <BsButton
            class="d-flex-center mr-2"
            @onClick={{this.openUserDeletionDialogue}}
            @type="danger"
            @outline={{true}}
            @title="Delete Selected Users"
          >
            {{svg-jar "trashcan" class="octicon"}}
          </BsButton>
        {{/if}}
      </div>
      <div class="d-flex">
        {{!-- User Creation Button --}}
        <BsButton
          class="d-flex-center mr-2"
          @onClick={{perform this.openUserCreation}}
          @type="success"
          @outline={{true}}
          @title="Add Users"
        >
          {{svg-jar "organization" class="octicon"}}{{svg-jar "plus-small" class="octicon"}}
          <span>Create Users</span>
        </BsButton>
        {{!-- Refresh Button --}}
        <BsButton
          class="d-flex-center"
          @onClick={{perform this.updateUserList}}
          @outline={{true}}
          @title="Reload Users"
        >
          {{svg-jar "sync" class="octicon"}}
        </BsButton>
      </div>
    </div>
  </div>
  <div
    id="user-list-table-div"
    class="d-flex flex-grow-1 flex-column"
    style="overflow-y: auto"
    {{did-update this.resetTable @users}}
    {{did-insert this.resetTable}}
  >
    {{!-- User List --}}
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th style="width: 20px">
            <div class="custom-control custom-checkbox">
              <input
                type="checkbox"
                class="custom-control-input"
                id="checkAll"
                disabled={{eq this.selectedCount 0}}
                checked={{this.allSelected}}
                {{on "change" this.selectAllCheckboxes}}
              >
              <label class="custom-control-label" for="checkAll"></label>
            </div>
          </th>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Roles</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#if this.updateUserList.isRunning}}
          <tr>
            <th scope="row"></th>
            <td>
              Loading User List
              <span
                class="spinner-border spinner-border-sm"
                role="status"
                aria-hidden="true"
              >
              </span>
            </td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        {{else}}
          {{#each @users as |user|}}
            <tr>
              <td scope="col">
                {{#if (not-eq this.currentUser.user.id user.id)}}
                  <div class="custom-control custom-checkbox">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      id="check-{{user.id}}"
                      checked={{get this.selected user.id}}
                      {{on "change" (fn this.selectCheckbox user.id)}}
                    >
                    <label class="custom-control-label" for="check-{{user.id}}"></label>
                  </div>
                {{/if}}
              </td>
              <th scope="row">{{user.id}}</th>
              <td>{{user.username}}</td>
              <td>
                {{user-roles-list user.roles}}
              </td>
              <td class="text-right">
                {{!-- Hide Edit/Delete for the admin user themself --}}
                {{#if (not-eq this.currentUser.user.id user.id)}}
                  <BsDropdown as |dd|>
                    {{!-- Show spinner instead of edit button, if user edit or deletion was called --}}
                    {{#if
                      (or
                      (and this.deleteUser.isRunning (eq (get this.deleteUser.last.args 0) user))
                      (and this.openUserEdit.isRunning (eq (get this.openUserEdit.last.args 0) user.id)))
                    }}
                      <span
                        class="spinner-border spinner-border-sm text-primary"
                        role="status"
                        aria-hidden="true"
                      >
                      </span>
                    {{else}}
                      <dd.button class="removecaret d-flex-center" @size="sm" @title="Options">
                        {{svg-jar "kebab-vertical" class="octicon"}}
                      </dd.button>
                    {{/if}}
                    <dd.menu as |ddm|>
                      <ddm.item @title="Edit">
                        <button
                          type="button"
                          class="dropdown-item d-flex-center"
                          style="cursor: pointer"
                          {{on "click" (perform this.openUserEdit user.id)}}
                        >
                          {{svg-jar "pencil" class="octicon" id="edit-button"}}<span>Edit</span>
                        </button>
                      </ddm.item>
                      <ddm.item @title="Delete">
                        <button
                          type="button"
                          class="dropdown-item d-flex-center"
                          {{on "click" (perform this.deleteUser user)}}
                        >
                          {{svg-jar "x" class="octicon" id="delete-button"}}<span>Delete</span>
                        </button>
                      </ddm.item>
                    </dd.menu>
                  </BsDropdown>
                {{/if}}
              </td>
            </tr>
          {{/each}}
        {{/if}}
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-between mt-3 mb-1">
    <PageNavigation
      @first={{@users.meta.pagination.first.number}}
      @prev={{@users.meta.pagination.prev.number}}
      @self={{@page}}
      @next={{@users.meta.pagination.next.number}}
      @last={{@users.meta.pagination.last.number}}
      @goToPage={{@goToPage}}
    />
    <PageSizeSelector
      @pageSizes={{@pageSizes}}
      @size={{@size}}
      @label="Users per page"
      @position="above"
      @changePageSize={{@changePageSize}}
    />
  </div>
</div>
