<h3>User Data</h3>
<hr>
<BsForm @model={{this}} @onSubmit={{perform this.saveUserChanges}} as |form|>
  <form.element
    @controlType="text"
    @label="ID"
    @property="idChange"
    @disabled={{true}}
  />
  <form.element
    @controlType="text"
    @label="Username"
    @placeholder="Enter New Username"
    @property="usernameChange"
  />
  <form.element
    @controlType="password"
    @label="Password"
    @placeholder="Enter New Password"
    @property="passwordChange"
  />
  <form.element @property="rolesChange" @label="Roles">
    <PowerSelectMultiple
      @options={{this.roles}}
      @placeholder="Choose roles"
      @loadingMessage="loading..."
      @onopen={{perform this.getRoles}}
      @onchange={{this.updateRoleSelection}}
      @searchEnabled={{false}}
      @searchField="default"
      @selected={{this.rolesChange}} as |item|
    >
      {{item}}
    </PowerSelectMultiple>
  </form.element>
  {{#if this.saveUserChanges.isRunning}}
    <BsButton @type="primary" @buttonType="submit" @disabled={{true}}>
      <span
        class="spinner-border spinner-border-sm"
        role="status"
        aria-hidden="true"
      >
      </span>
      Saving...
    </BsButton>
  {{else}}
    <BsButton @defaultText="Save Changes" @type="primary" @buttonType="submit" />
  {{/if}}
</BsForm>