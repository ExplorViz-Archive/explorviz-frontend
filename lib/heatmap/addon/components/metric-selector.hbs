<PowerSelect
  @id="heatmapMetricSelector"
  @options={{this.heatmapConfiguration.latestClazzMetrics}}
  @triggerClass="metric-selector"
  @selected={{this.heatmapConfiguration.selectedMetric}}
  @onchange={{@selectMetric}}
  @placeholder="Select metric..."
  @searchEnabled={{false}}
  @matchTriggerWidth={{false}} as |metric|
>
  {{capitalize metric.name}}
  {{!-- <HelpTooltipRight @title={{metric.description}}/> --}}
</PowerSelect>