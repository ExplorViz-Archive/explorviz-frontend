{{#if @popupData}}
  <div {{did-insert this.setupDragElement}} {{on "click" this.keepPopupOpen}} id="popupWrapper" class="foreground" style="position: absolute; cursor: move">
    <div class="d-flex">
      <BsButton class="ar-popup-close"
        @type ="primary"
        {{on "click" this.closePopup}}
        {{on "touchstart" this.closePopup}}
      >
        X
      </BsButton>
    </div>
    <ArPopupCoordinator
      @popupData={{@popupData}}
    />
  </div>
{{/if}}
